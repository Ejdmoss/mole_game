            on_press: root.whack_mole(self)

    BoxLayout:
        spacing: 10
        ToggleButton:
            text: 'Mole 4'
            on_press: root.whack_mole(self)

        ToggleButton:
            text: 'Mole 5'
            on_press: root.whack_mole(self)

        ToggleButton:
            text: 'Mole 6'
            on_press: root.whack_mole(self)

    BoxLayout:
        spacing: 10
        ToggleButton:
            text: 'Mole 7'
            on_press: root.whack_mole(self)

        ToggleButton:
            text: 'Mole 8'
            on_press: root.whack_mole(self)

        ToggleButton:
            text: 'Mole 9'
            on_press: root.whack_mole(self)

    Button:
        text: 'Start Game'
        on_press: root.start_game(self)

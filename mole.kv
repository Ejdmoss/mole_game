<MoleGame>:
    orientation: 'vertical'
    spacing: 10

    Label:
        id: score_label
        font_size: 20
        text: "Score: 0"

    BoxLayout:
        spacing: 10
        ToggleButton:
            text: 'Mole 1'
            on_press: root.whack_mole(self)

        ToggleButton:
            text: 'Mole 2'
            on_press: root.whack_mole(self)

        ToggleButton:
